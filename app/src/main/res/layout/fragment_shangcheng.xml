<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shangcheng_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fpactivity_imm_height"
        android:background="@color/background_white">

        <LinearLayout
            android:id="@+id/shangcheng_ll_inscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/shangcheng_rl2"
                android:layout_width="match_parent"
                android:layout_height="34dp">


                <View
                    android:id="@+id/shangcheng_line"
                    android:layout_width="1dp"
                    android:layout_height="17dp"
                    android:layout_centerInParent="true"
                    android:background="@color/color_pink"></View>

                <TextView
                    android:id="@+id/shangcheng_bendi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@id/shangcheng_line"
                    android:text="本地"
                    android:textColor="@color/color_pink"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/shangcheng_quanguo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/shangcheng_line"
                    android:text="全国"
                    android:textColor="@color/text_color_dark"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shangcheng_ll1"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:background="@color/color_dark_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/meifa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/shangcheng_bt_pink"
                            android:text=""
                            android:textColor="@color/background_white"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/meifa_cornermark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/selected_corner"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">


                        <Button
                            android:id="@+id/hufu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/shangcheng_bt_purple"
                            android:text=""
                            android:textColor="@color/background_white"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/hufu_cornermark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/selected_corner"
                            android:visibility="gone"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/caizhuang"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/shangcheng_bt_blue"
                            android:text=""
                            android:textColor="@color/background_white"
                            android:textSize="14sp" />
                        <ImageView
                            android:id="@+id/caizhuang_cornermark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/selected_corner"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">

                        <Button
                            android:id="@+id/qita"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/shangcheng_bt_green"
                            android:text=""
                            android:textColor="@color/background_white"
                            android:textSize="14sp" />
                        <ImageView
                            android:id="@+id/qita_cornermark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/selected_corner"
                            android:visibility="gone"/>
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/psfragment_ll_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp">


                    <RelativeLayout
                        android:id="@+id/shangcheng_rl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/shangcheng_tv_shangjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="优质商家"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/shangcheng_v_line1"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_alignLeft="@id/shangcheng_tv_shangjia"
                            android:layout_alignParentBottom="true"
                            android:layout_alignRight="@id/shangcheng_tv_shangjia"
                            android:background="@color/color_pink" />


                        <TextView
                            android:id="@+id/shangcheng_tv_shangpin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"
                            android:layout_toRightOf="@+id/shangcheng_tv_shangjia"
                            android:onClick="onClick"
                            android:text="优质商品"
                            android:textColor="@color/text_color_dark"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/shangcheng_v_line2"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_alignLeft="@id/shangcheng_tv_shangpin"
                            android:layout_alignParentBottom="true"
                            android:layout_alignRight="@id/shangcheng_tv_shangpin"
                            android:background="@color/color_pink"
                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>

                <include layout="@layout/view_line_marginrl12"></include>


                <com.haoqu.meiquan.view.pullViewpager
                    android:id="@+id/shangcheng_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:flipInterval="30"
                    android:persistentDrawingCache="animation"></com.haoqu.meiquan.view.pullViewpager>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Activity_ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fpactivity_imm_height"
        android:layout_alignParentTop="true"
        android:background="@color/color_pink"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/psfragment_imm_height"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/Activity_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titlebar_text"
                    style="@style/actionbar_textview"
                    android:text="美圈街" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@id/titlebar_text"
                    android:src="@mipmap/titlebar_linel" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/titlebar_text"
                    android:src="@mipmap/titlebar_liner" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
