<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haoqu.meiquan.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_marginTop="91dp"
            android:src="@mipmap/login_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/background_yuanjiao_loginwhite">

            <TextView
                android:id="@+id/lActivity_account"
                style="@style/rActivity_tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="账号"
                android:textColor="@color/background_white" />

            <View
                android:id="@+id/lActivity_v_black1"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/lActivity_account"
                android:background="@color/background_white" />

            <EditText
                android:id="@+id/lActivity_account_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/lActivity_v_black1"
                android:background="@null"
                android:hint="@string/acountHint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_white"
                android:textSize="12sp">

                <requestFocus />
            </EditText>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_yuanjiao_loginwhite">

            <TextView
                android:id="@+id/lActivity_passWord"
                style="@style/rActivity_tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="密码"
                android:textColor="@color/background_white" />

            <View
                android:id="@+id/lActivity_v_black3"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/lActivity_passWord"
                android:background="@color/background_white" />

            <EditText
                android:id="@+id/lActivity_passWord_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/lActivity_v_black3"
                android:background="@null"
                android:hint="@string/passWordHint"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_white"
                android:textSize="12sp"></EditText>
        </RelativeLayout>


        <Button
            android:id="@+id/lActivity_bt_login"
            style="@style/login_commit"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="33dp"
            android:gravity="center" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lActivity_bt_forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="@string/forgortPassWord"
                android:textColor="@color/background_white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/lActivity_bt_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="我要注册"
                android:textColor="@color/background_white"
                android:textSize="10sp" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>