<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">



    <RelativeLayout
        android:id="@+id/psfragment_rl_zhonglei"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:background="@drawable/color_background_personfragment_listitem"
        android:focusable="false"
        >

        <View
            android:layout_width="4dp"
            android:layout_height="12dp"
            android:background="@color/text_red"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        
        <TextView
            android:id="@+id/psfragment_tv_zhonglei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_color_import"
            android:layout_marginLeft="12dp"
            />


        <ImageView
            android:id="@+id/psfragment_iv"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrowright"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多商品"
            android:textSize="12sp"
            android:textColor="@color/main_bt_text_color"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/psfragment_iv"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <include
        android:id="@+id/psfragment_line1"
        layout="@layout/view_line_marginrl12"
        ></include>

    <RelativeLayout
        android:id="@+id/psfragment_rl_shangpin"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@drawable/color_background_personfragment_listitem">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/color_background_personfragment_listitem"
            >
            <ImageView
                android:id="@+id/psfragment_iv_thumb"
                android:layout_width="115dp"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"

                />
            <TextView
                android:id="@+id/psfragment_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_pink"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/psfragment_iv_thumb"
                android:layout_marginLeft="24dp"
                />
            <TextView
                android:id="@+id/psfragment_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/psfragment_tv_title"
                android:layout_alignLeft="@id/psfragment_tv_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/text_color_dark"
                android:textSize="8sp"
                />
            <TextView
                android:id="@+id/psfragment_tv_specialPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特价 : ¥ "
                android:textSize="9sp"
                android:textColor="@color/color_pink"
                android:layout_alignLeft="@id/psfragment_tv_title"
                android:layout_marginTop="56dp"
                android:focusable="false"/>
            <TextView
                android:id="@+id/psfragment_tv_marketprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/psfragment_tv_specialPrice"
                android:layout_alignBaseline="@id/psfragment_tv_specialPrice"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/color_pink"

                />

            <TextView
                android:id="@+id/psfragment_tv_costPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/psfragment_tv_specialPrice"
                android:layout_marginLeft="58dp"
                android:layout_alignBaseline="@id/psfragment_tv_specialPrice"
                android:text="原价 : "
                android:textSize="9sp"
                android:textColor="@color/text_color_dark"
                />
            <TextView
                android:id="@+id/psfragment_tv_yuanjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/psfragment_tv_costPrice"
                android:layout_alignBaseline="@id/psfragment_tv_costPrice"
                android:text=""
                android:textSize="9sp"
                android:textColor="@color/text_color_dark"
                />

            <TextView
                android:id="@+id/psfragment_tv_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/psfragment_tv_specialPrice"
                android:layout_alignLeft="@id/psfragment_tv_specialPrice"
                android:layout_marginTop="5dp"
                android:text="销量 : "
                android:textSize="9sp"
                android:textColor="@color/text_color_import"

                />
            <TextView
                android:id="@+id/psfragment_tv_showsales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/psfragment_tv_sales"
                android:layout_alignBaseline="@+id/psfragment_tv_sales"
                android:text=""
                android:textSize="9sp"
                android:textColor="@color/text_color_import"
                />

        </RelativeLayout>

    </RelativeLayout>
    <include layout="@layout/view_line_marginrl12"></include>
</LinearLayout>
