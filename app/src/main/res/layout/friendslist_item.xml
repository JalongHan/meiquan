<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:id="@+id/friendslist_rl"
        android:layout_width="wrap_content"
        android:layout_height="77dp"

         >

        <TextView
            android:id="@+id/friendslist_tv_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="12sp" />

        <com.haoqu.meiquan.view.CircleImageView
            android:id="@+id/friendslist_friend_headicon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/friendslist_tv_ranking"
            android:scaleType="centerCrop"
            android:src="@mipmap/friendslist_friend_headicon" />

        <TextView
            android:id="@+id/friendslist_nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/friendslist_friend_headicon"
            android:text="小晨"
            android:textColor="@color/text_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@id/friendslist_friend_headicon"
            android:text="¥  "
            android:textColor="@color/text_black"
            android:textSize="8sp"
            android:layout_alignBaseline="@id/friendslist_nikename"/>

        <TextView
            android:id="@+id/friendslist_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textView2"
            android:text="300"
            android:textColor="@color/text_black"
            android:textSize="12sp" />


    </RelativeLayout>
    <include layout="@layout/view_line_nopadding"></include>
</LinearLayout>