<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- 注册中各edittext的style -->
    <style name="rActivity_edittext_style">
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_color_import</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/text_color_dark</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <!--注册页中持卡人手机等字体的样式-->
    <style name="rActivity_tv_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/text_color_import</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--注册页竖的灰色线-->


    <style name="rActivity_verticalline">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/color_dark</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">80dp</item>
    </style>

    <style name="fragment_nocode_edittext_style">
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_color_dark</item>

    </style>
    <!-- bindBankActivity中的字样式 -->
    <style name="bbActivity_edittext_sytle">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">12dp</item>

    </style>
    <!-- fragmentmycenter中的textview样式 -->
    <style name="fragmentmycenter_textview_sytle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_import</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- fragmentmycenter中的textview样式 -->
    <style name="mytoast_textview_sytle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/mytoast_yuanjiao_black</item>
    </style>
    <!-- 注册页和忘记密码页的获取 SMS验证码按钮 -->
    <style name="get_SMS_Button">
        <item name="android:text">获取验证码</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:background">@drawable/color_background_getsmscode</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>

    <!-- 忘记密码页的提交按钮 -->
    <style name="forgetpassword_commit">
        <item name="android:text">完 成</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:background">@drawable/color_background_commit</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <!-- 登陆页提交按钮 -->
    <style name="login_commit">
        <item name="android:text">登 陆</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:background">@drawable/color_background_loginbutton</item>


    </style>



    <!--顶导航栏字体的样式-->
    <style name="actionbar_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!--顶导航栏返回按钮的样式-->
    <style name="actionbar_backarrow">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:src">@mipmap/back_arrow</item>
    </style>

    <!--main页按钮imageview样式-->
    <style name="main_button_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="main_button_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/main_bt_text_color</item>
        <item name="android:layout_centerHorizontal">true</item>


    </style>
</resources>











