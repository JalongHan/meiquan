<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_dark"
    android:orientation="vertical"
    tools:context="com.haoqu.meiquan.activity.MainActivity" >


	<LinearLayout
        android:id="@+id/mActivity_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
       	android:background="@color/background_main_dark" >

        <Button
            android:id="@+id/main_bt_personstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="首页"
            android:textSize="12sp"
            android:drawableTop="@drawable/main_bt_personstore"
            android:textColor="@color/main_bt_text_color"/>

        <Button
            android:id="@+id/main_bt_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="排行榜"
            android:textSize="12sp"
            android:drawableTop="@drawable/main_bt_friends"
            android:textColor="@color/main_bt_text_color" />
<!--  
        <Button
            android:id="@+id/main_bt_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/main_bt_store"
            android:paddingTop="7dp"
            android:text="总商城"
            android:textSize="10sp"
            android:paddingBottom="7dp"
            android:textColor="@color/main_bt_text_color" />
-->
        <Button
            android:id="@+id/main_bt_mycneter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="我"
            android:textSize="10sp"
            android:drawableTop="@drawable/main_bt_mycneter"
            android:textColor="@color/main_bt_text_color" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mActivity_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mActivity_ll"
        android:background="@color/background_white">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
