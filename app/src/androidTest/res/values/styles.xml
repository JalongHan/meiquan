<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- 注册中各edittext的style -->
    <style name="rActivity_edittext_style">
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/text_color_dark</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <!--注册页中持卡人手机等字体的样式-->
    <style name="rActivity_tv_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/text_color_import</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--注册页竖的灰色线-->


    <style name="rActivity_verticalline">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/color_dark</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">100dp</item>
    </style>

    <style name="fragment_nocode_edittext_style">
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_color_dark</item>

    </style>
    <!-- bindBankActivity中的字样式 -->
    <style name="bbActivity_edittext_sytle">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">12dp</item>

    </style>
    <!-- fragmentmycenter中的textview样式 -->
    <style name="fragmentmycenter_textview_sytle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_import</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- fragmentmycenter中的textview样式 -->
    <style name="mytoast_textview_sytle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/mytoast_yuanjiao_black</item>
    </style>
    <!-- 注册页和忘记密码页的获取 SMS验证码按钮 -->
    <style name="get_SMS_Button">
        <item name="android:text">获取验证码</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:background">@drawable/color_background_getsmscode</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    <!-- 忘记密码页的提交按钮 -->
    <style name="forgetpassword_commit">
        <item name="android:text">完 成</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:background">@drawable/color_background_commit</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <!-- 登陆页提交按钮 -->
    <style name="login_commit">
        <item name="android:text">登 陆</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:background">@drawable/color_background_loginbutton</item>


    </style>





</resources>
